<?xml version='1.0' encoding='utf-8'?>
<widget id="com.avocado" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Avocado</name>
    <description>
        Eine Vokabeltrainer-App
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Larissa Schenk und Christian Wansart
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="www/res/icons/android/icon-72-hdpi.png" />
    <splash src="www/res/screen/splash.png" density="port-hdpi" />
    <splash src="www/res/screen/splash-land.png" density="land-hdpi" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
